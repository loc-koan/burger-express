<h1>Eat-Da-Burger!</h1>


<div class="row">

  <div class="col-md-6">
    <h2>Devoured List</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
        <li>{{burger_name}}</li>
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="col-md-6">
    <h2>To Make List</h2>
    <ol>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{burger_name}} <button data-id={{this.id}} class="devourBurger">Devour</button>
      </li>
      {{/unless}}
      {{/each}}
    </ol>
  </div>
</div>

<div class="row">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="bur">Burger Name:</label>
      <input type="text" id="bur" name="name">
    </div>

    <button type="submit">Confirm Burger</button>
  </form>
</div>